// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id  Int @id @default(autoincrement())
  email String @unique
  password String? 
  img String? 
  role Role @default(USER)
}

enum Role {
  USER
  ADMIN
}

model Language{
  shortName String @id
  fullName String
  productInternalization ProductInternalization[]
}

model Product {
  id Int @id @default(autoincrement())
  UID String 
  article String?


  translations ProductInternalization[]
  priceAndDiscount ProductPriceAndDiscount?
  availableAmount ProductAvailableAmout?
  images ProductImages[]
}

model ProductInternalization{
  id Int @id @default(autoincrement())
  name String
  fullName String
  description String?
  product Product @relation(fields: [productId], references: [id])
  productId Int
  language Language @relation(fields: [languageShortName], references: [shortName])
  languageShortName String
}

model ProductPriceAndDiscount{
  productId Int @unique @id
  price Float
  discount Float?
  product Product @relation(fields: [productId], references: [id])
}

model ProductAvailableAmout{
  productId Int @unique @id
  product Product @relation(fields: [productId], references: [id])
  amount Float?
  updatedAt DateTime @updatedAt
}

model ProductImages{
  id Int @id @default(autoincrement())
  imgPath String
  originalName String
  productId Int
  product Product @relation(fields: [productId], references: [id])
}